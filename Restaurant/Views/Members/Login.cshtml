@model Restaurant.Models.Services.LoginVm

@{
    ViewBag.Title = "Login";
    Layout = null;

}
<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <link rel="stylesheet" href="~/Content/Register.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=1">
    <title>登入</title>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">

                @using (Html.BeginForm())
                {@Html.AntiForgeryToken()



                <h2>登入</h2>
                <div class="inputbox">
                    <ion-icon name="mail-outline"></ion-icon>
                    @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @type = "text", @placeholder = "帳號", @name = "account", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })

                </div>
                <div class="inputbox">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @placeholder = "密碼", @name = "password", @required = "" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="button">
                    登入
                </button>
            }
            </div>

        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
